<resources xmlns:app="http://schemas.android.com/tools" xmlns:android="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myNavigationColor</item>
        <item name="colorPrimaryDark">@color/myNavigationColor</item>
        <item name="colorAccent">@color/myAccentColor</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
        <item name="android:navigationBarColor">@color/myNavigationColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/myWindowBackground</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/myNavigationColor</item>
    </style>

    <style name="AppLightTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarLight</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ActionBarLight" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@android:color/white</item>
        <item name="android:icon">@drawable/ic_left_arrow</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/myAccentColor</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="android:textColorSecondary">@color/myAccentColor</item>
        <item name="android:textColorPrimary">@color/myAccentColor</item>
        <item name="android:textColor">@color/myAccentColor</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
</resources>
